    <style>
        .material-symbols-outlined { font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24; }
        
        /* Transparency Mode Styles */
        body.transparency-mode .bg-surface-dark,
        body.transparency-mode aside.desktop-sidebar,
        body.transparency-mode aside#roomInfoPanel {
            background: rgba(15, 20, 25, 0.4) !important;
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-color: rgba(255, 255, 255, 0.1);
        }
        
        body.transparency-mode header {
            background: rgba(15, 20, 25, 0.6) !important;
            backdrop-filter: blur(24px);
            -webkit-backdrop-filter: blur(24px);
        }
        
        body.transparency-mode .bg-surface-hover:hover {
            background: rgba(21, 27, 33, 0.5) !important;
        }
        
        body.transparency-mode .bg-surface-lighter {
            background: rgba(26, 33, 40, 0.5) !important;
        }
        
        /* Custom Scrollbar - Darker */
        .custom-scrollbar::-webkit-scrollbar { width: 6px; }
        .custom-scrollbar::-webkit-scrollbar-track { background: transparent; }
        .custom-scrollbar::-webkit-scrollbar-thumb { background: #1f2830; border-radius: 3px; }
        .custom-scrollbar::-webkit-scrollbar-thumb:hover { background: #2a3440; }
        
        /* Tabs - Sliding Highlight */
        #tabHighlight {
            background: var(--color-primary);
            box-shadow: 0 2px 12px var(--accent-glow), 0 0 20px var(--accent-glow);
            transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), 
                        width 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                        opacity 0.2s ease;
            opacity: 0; /* Start hidden, will be shown by JS */
        }

        
        /* Attachment Menu Animations - Real Glass */
        #attachmentMenu {
            opacity: 0;
            transform: translateY(10px);
            transition: opacity 0.2s ease-out,
                        transform 0.2s ease-out;
            pointer-events: none;
            background: rgba(15, 20, 25, 0.25) !important;
            backdrop-filter: blur(40px) saturate(180%) brightness(1.1) !important;
            -webkit-backdrop-filter: blur(40px) saturate(180%) brightness(1.1) !important;
            border: 1px solid rgba(255, 255, 255, 0.25) !important;
            box-shadow: 
                0 8px 32px rgba(0, 0, 0, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.3),
                inset 0 -1px 0 rgba(0, 0, 0, 0.1) !important;
        }
        
        #attachmentMenu.show {
            opacity: 1;
            transform: translateY(0);
            pointer-events: all;
            transition: opacity 0.2s ease-out,
                        transform 0.2s ease-out;
        }
        
        #attachmentMenu.closing {
            opacity: 0 !important;
            transform: translateY(20px) !important;
            pointer-events: none;
            transition: opacity 0.25s ease-in,
                        transform 0.25s ease-in;
        }
        
        /* Plus button rotation */
        #attachmentBtn .material-symbols-outlined {
            transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        #attachmentBtn.active .material-symbols-outlined {
            transform: rotate(45deg);
        }
        
        /* Context Menu - Real Glass */
        .context-menu {
            position: fixed;
            background: linear-gradient(135deg, rgba(15, 20, 25, 0.4) 0%, rgba(10, 15, 18, 0.5) 100%);
            backdrop-filter: blur(24px) saturate(200%);
            -webkit-backdrop-filter: blur(24px) saturate(200%);
            border: 1px solid rgba(255, 255, 255, 0.15);
            border-radius: 12px;
            box-shadow: 
                0 8px 32px rgba(0, 0, 0, 0.4),
                inset 0 1px 0 rgba(255, 255, 255, 0.15),
                inset 0 -1px 0 rgba(0, 0, 0, 0.1);
            z-index: 9999;
            min-width: 180px;
            padding: 6px;
            display: none;
        }
        .context-menu.show { display: block; }
        .context-menu-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 10px 12px;
            cursor: pointer;
            border-radius: 8px;
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            color: rgba(255, 255, 255, 0.95);
            font-size: 14px;
            background: rgba(255, 255, 255, 0.02);
        }
        .context-menu-item:hover {
            background: linear-gradient(135deg, rgba(13, 185, 242, 0.6) 0%, rgba(13, 185, 242, 0.8) 100%);
            color: white;
            transform: translateX(2px);
            box-shadow: 0 4px 12px rgba(13, 185, 242, 0.3);
        }
        .context-menu-item.danger:hover {
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.6) 0%, rgba(239, 68, 68, 0.8) 100%);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
        }
        .context-menu-divider {
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.15), transparent);
            margin: 4px 0;
        }
        
        /* Hide elements */
        .login-screen { display: flex; position: fixed; inset: 0; z-index: 100; }
        .login-screen.hidden { display: none !important; }
        .chat-screen { display: none; position: fixed; inset: 0; z-index: 50; }
        .chat-screen.active { display: flex !important; height: 100vh; }
        
        /* Mobile responsive */
        @media (max-width: 1023px) {
            .desktop-sidebar { display: none !important; }
            .desktop-chatlist { display: none !important; }
            #roomInfoPanel { display: none !important; }
            
            /* Mobile-specific utilities */
            .mobile-only { display: block !important; }
            .mobile-hidden { display: none !important; }
            .desktop-only { display: none !important; }
            
            /* Add bottom padding to prevent nav covering input */
            .chat-screen {
                padding-bottom: 100px;
            }
            
            /* Make sure input area is above bottom nav */
            main > div:last-child {
                margin-bottom: 0;
                padding-bottom: 1.5rem;
            }
        }
        @media (min-width: 1024px) {
            #mobileBottomNav { display: none !important; }
            .mobile-overlay { display: none !important; }
            .mobile-left-panel { display: none !important; }
            .mobile-right-panel { display: none !important; }
            
            /* Desktop-specific utilities */
            .mobile-only { display: none !important; }
            .mobile-hidden { display: block !important; }
            .desktop-only { display: block !important; }
        }

        /* Mobile Swipe Panels */
        @media (max-width: 1023px) {
            body { touch-action: pan-x; }
            
            .mobile-overlay {
                position: fixed;
                top: 0;
                left: 0;
                width: 100vw;
                height: 100vh;
                background: rgba(0, 0, 0, 0.5);
                opacity: 0;
                visibility: hidden;
                transition: opacity 0.3s ease;
                z-index: 60;
            }
            .mobile-overlay.show {
                opacity: 1;
                visibility: visible;
            }
            
            /* Left Panel - Members & Settings - Overlay from left */
            .mobile-left-panel {
                position: fixed;
                top: 0;
                left: 0;
                width: 100vw;
                height: 100vh;
                background: linear-gradient(135deg, #0f1419 0%, #151b21 100%);
                transform: translateX(-100%);
                transition: transform 0.3s ease;
                z-index: 70;
                overflow-y: auto;
            }
            .mobile-left-panel.show {
                transform: translateX(0);
            }
            
            /* Right Panel - Chats List - Overlay from right */
            .mobile-right-panel {
                position: fixed;
                top: 0;
                right: 0;
                width: 100vw;
                height: 100vh;
                background: linear-gradient(135deg, #0f1419 0%, #1a2128 100%);
                transform: translateX(100%);
                transition: transform 0.3s ease;
                z-index: 70;
                overflow-y: auto;
            }
            .mobile-right-panel.show {
                transform: translateX(0);
            }
            
            /* Chat screen stays in place - no transforms */
            .chat-screen {
                /* No transforms needed - panels overlay on top */
            }
            
            /* Swipe indicators */
            .swipe-indicator {
                position: absolute;
                top: 50%;
                transform: translateY(-50%);
                width: 40px;
                height: 40px;
                background: rgba(13, 185, 242, 0.3);
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                opacity: 0;
                transition: opacity 0.2s ease;
                pointer-events: none;
                z-index: 30;
            }
            .swipe-indicator.left {
                left: 20px;
            }
            .swipe-indicator.right {
                right: 20px;
            }
            .swipe-indicator.show {
                opacity: 1;
            }
            
            /* Better touch targets */
            button { min-height: 44px; }
            input[type="text"] { font-size: 16px; }
            
            /* Prevent zoom on input focus */
            input[type="text"], textarea {
                -webkit-appearance: none;
                border-radius: 0;
            }
        }
    </style>
</head>
