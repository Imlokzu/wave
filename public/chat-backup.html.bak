    <link href="/css/theme.css" rel="stylesheet"/>
    <link href="/css/theme-config.css" rel="stylesheet"/>
    <script src="/js/auth-guard.js"></script>
    <script src="/js/mobile-detector.js"></script>
    <script src="/js/update-checker.js"></script>
