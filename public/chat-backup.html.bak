    <!-- Context Menu -->
    <script>
        // Context Menu - Wait for DOM to be ready
        document.addEventListener('DOMContentLoaded', function() {
            let contextMenuTarget = null;
            const contextMenu = document.getElementById('messageContextMenu');
            
            if (!contextMenu) {
                console.error('[Context Menu] Menu element not found!');
                return;
            }
            
            console.log('[Context Menu] Menu element found:', contextMenu);
            
            // Show context menu on right-click
            document.addEventListener('contextmenu', function(e) {
                console.log('[Context Menu] Right-click detected on:', e.target);
                
                const messageEl = e.target.closest('[data-message-id]');
                console.log('[Context Menu] Message element found:', !!messageEl);
                
                if (messageEl) {
                    e.preventDefault();
                    contextMenuTarget = messageEl;
                    
                    console.log('[Context Menu] Opening menu at:', e.pageX, e.pageY);
                    
                    // Position menu
                    contextMenu.style.left = e.pageX + 'px';
                    contextMenu.style.top = e.pageY + 'px';
                    contextMenu.classList.add('show');
                    
                    console.log('[Context Menu] Menu classes:', contextMenu.className);
                    console.log('[Context Menu] Menu display:', window.getComputedStyle(contextMenu).display);
                    
                    // Check if user owns the message to show/hide edit/delete
                    const messageId = messageEl.dataset.messageId;
                    const userId = localStorage.getItem('userId');
                    const senderId = messageEl.dataset.senderId;
                    
                    const editBtn = contextMenu.querySelector('[data-action="edit"]');
                    const deleteBtn = contextMenu.querySelector('[data-action="delete"]');
                    
                    // Show edit/delete only for own messages
                    if (senderId === userId) {
                        if (editBtn) editBtn.style.display = 'flex';
                        if (deleteBtn) deleteBtn.style.display = 'flex';
                    } else {
                        if (editBtn) editBtn.style.display = 'none';
                        if (deleteBtn) deleteBtn.style.display = 'none';
                    }
                }
            });
            
            // Long press for mobile
            let longPressTimer;
            document.addEventListener('touchstart', function(e) {
                const messageEl = e.target.closest('[data-message-id]');
                if (messageEl) {
                    longPressTimer = setTimeout(function() {
                        contextMenuTarget = messageEl;
                        const touch = e.touches[0];
                        contextMenu.style.left = touch.pageX + 'px';
                        contextMenu.style.top = touch.pageY + 'px';
                        contextMenu.classList.add('show');
                        
                        // Vibrate on mobile
                        if (navigator.vibrate) {
                            navigator.vibrate(50);
                        }
                    }, 500);
                }
            });
            
            document.addEventListener('touchend', function() {
                clearTimeout(longPressTimer);
            });
            
            document.addEventListener('touchmove', function() {
                clearTimeout(longPressTimer);
            });
            
            // Hide context menu on click outside
            document.addEventListener('click', function(e) {
                if (!contextMenu.contains(e.target)) {
                    contextMenu.classList.remove('show');
                }
            });
            
            // Handle context menu actions
            contextMenu.addEventListener('click', function(e) {
                const action = e.target.closest('[data-action]')?.dataset.action;
                if (!action || !contextMenuTarget) return;
                
                const messageId = contextMenuTarget.dataset.messageId;
                const senderId = contextMenuTarget.dataset.senderId;
                const userId = localStorage.getItem('userId');
                
                // Find message text from various possible locations
                let messageText = '';
                const textElement = contextMenuTarget.querySelector('.message-text') || 
                                  contextMenuTarget.querySelector('p') ||
                                  contextMenuTarget.querySelector('div[class*="text"]');
                if (textElement) {
                    messageText = textElement.textContent || textElement.innerText || '';
                }
                
                console.log('[Context Menu] Action:', action, 'MessageId:', messageId, 'Text:', messageText);
                
                switch(action) {
                    case 'reply':
                        console.log('[Context Menu] Reply to message:', messageId);
                        // Set reply mode in the input
                        const messageInput = document.getElementById('messageInput');
                        if (messageInput && messageText) {
                            // Show reply indicator
                            const replyIndicator = document.createElement('div');
                            replyIndicator.id = 'replyIndicator';
                            replyIndicator.className = 'flex items-center justify-between px-4 py-2 bg-surface-lighter border-l-4 border-primary mb-2';
                            replyIndicator.innerHTML = `
                                <div class="flex items-center gap-2">
                                    <span class="material-symbols-outlined text-primary text-[18px]">reply</span>
                                    <div>
                                        <p class="text-xs text-primary font-medium">Replying to message</p>
                                        <p class="text-xs text-slate-400 truncate max-w-[300px]">${messageText}</p>
                                    </div>
                                </div>
                                <button onclick="document.getElementById('replyIndicator').remove()" class="text-slate-400 hover:text-white">
                                    <span class="material-symbols-outlined text-[18px]">close</span>
                                </button>
                            `;
                            
                            // Insert before message input
                            const inputContainer = messageInput.parentElement;
                            const existingIndicator = document.getElementById('replyIndicator');
                            if (existingIndicator) existingIndicator.remove();
                            inputContainer.insertBefore(replyIndicator, inputContainer.firstChild);
                            
                            // Focus input
                            messageInput.focus();
                        }
                        break;
                        
                    case 'forward':
                        console.log('[Context Menu] Forward message:', messageId);
                        // Show forward modal with room/user selection
                        alert('Forward feature: Select a chat to forward this message to.\n\nComing soon!');
                        break;
                        
                    case 'copy':
                        console.log('[Context Menu] Copy message text:', messageText);
                        if (messageText && messageText.trim()) {
                            navigator.clipboard.writeText(messageText.trim()).then(() => {
                                console.log('[Context Menu] Message copied to clipboard');
                                // Show toast notification
                                const toast = document.createElement('div');
                                toast.className = 'fixed bottom-4 right-4 bg-primary text-white px-4 py-2 rounded-lg shadow-lg z-50 animate-fade-in';
                                toast.textContent = 'Message copied!';
                                document.body.appendChild(toast);
                                setTimeout(() => {
                                    toast.style.opacity = '0';
                                    toast.style.transition = 'opacity 0.3s';
                                    setTimeout(() => toast.remove(), 300);
                                }, 2000);
                            }).catch(err => {
                                console.error('[Context Menu] Failed to copy:', err);
                                alert('Failed to copy message');
                            });
                        } else {
                            console.warn('[Context Menu] No text to copy');
                            alert('No text to copy');
                        }
                        break;
                        
                    case 'ask-ai':
                        console.log('[Context Menu] Ask AI about message:', messageText);
                        if (messageText && messageText.trim()) {
                            // Show loading indicator
                            const loadingToast = document.createElement('div');
                            loadingToast.id = 'aiLoadingToast';
                            loadingToast.className = 'fixed bottom-4 right-4 bg-surface-dark text-white px-4 py-3 rounded-lg shadow-lg z-50 flex items-center gap-3 border border-primary';
                            loadingToast.innerHTML = `
                                <div class="animate-spin rounded-full h-4 w-4 border-2 border-primary border-t-transparent"></div>
                                <span>Asking AI...</span>
                            `;
                            document.body.appendChild(loadingToast);
                            
                            // Add loading message to chat
                            const loadingMessageId = `ai_loading_${Date.now()}`;
                            state.addMessage({
                                id: loadingMessageId,
                                type: 'system',
                                content: ' AI is thinking...',
                                timestamp: new Date()
                            });
                            
                            // Scroll to bottom to show loading message
                            setTimeout(() => {
                                const messagesContainer = document.getElementById('messages');
                                if (messagesContainer) {
                                    messagesContainer.scrollTop = messagesContainer.scrollHeight;
                                }
                            }, 100);
                            
                            // Call AI API
                            fetch('/api/ai-chat/simple', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({
                                    message: `Analyze this message: "${messageText.trim()}"`,
                                    enableSearch: false
                                })
                            })
                            .then(response => {
                                if (!response.ok) {
                                    throw new Error(`HTTP error! status: ${response.status}`);
                                }
                                return response.json();
                            })
                            .then(data => {
                                console.log('[Context Menu] AI response received:', data);
                                
                                // Remove loading toast
                                loadingToast.remove();
                                
                                // Remove loading message
                                state.removeMessage(loadingMessageId);
                                
                                // Get response from API - check multiple possible fields
                                const aiResponse = data.response || data.message || data.content;
                                
                                console.log('[Context Menu] Extracted AI response:', aiResponse ? 'Found' : 'Not found');
                                
                                if (aiResponse && aiResponse.trim()) {
                                    // Add AI response as a message in chat
                                    state.addMessage({
                                        id: `ai_response_${Date.now()}`,
                                        type: 'ai',
                                        content: aiResponse,
                                        senderNickname: 'AI Assistant',
                                        timestamp: new Date(),
                                        isAI: true
                                    });
                                    
                                    // Scroll to bottom to show AI response
                                    setTimeout(() => {
                                        const messagesContainer = document.getElementById('messages');
                                        if (messagesContainer) {
                                            messagesContainer.scrollTop = messagesContainer.scrollHeight;
                                        }
                                    }, 100);
                                    
                                    // Show success toast
                                    const successToast = document.createElement('div');
                                    successToast.className = 'fixed bottom-4 right-4 bg-primary text-white px-4 py-2 rounded-lg shadow-lg z-50';
                                    successToast.textContent = ' AI response received';
                                    document.body.appendChild(successToast);
                                    setTimeout(() => successToast.remove(), 2000);
                                } else {
                                    console.error('[Context Menu] Response data:', data);
                                    throw new Error('No response from AI');
                                }
                            })
                            .catch(err => {
                                console.error('[Context Menu] AI request failed:', err);
                                loadingToast.remove();
                                
                                // Remove loading message
                                state.removeMessage(loadingMessageId);
                                
                                // Show error toast
                                const errorToast = document.createElement('div');
                                errorToast.className = 'fixed bottom-4 right-4 bg-red-600 text-white px-4 py-2 rounded-lg shadow-lg z-50';
                                errorToast.textContent = 'Failed to get AI response: ' + err.message;
                                document.body.appendChild(errorToast);
                                setTimeout(() => errorToast.remove(), 3000);
                            });
                        } else {
                            alert('No text to send to AI');
                        }
                        break;
                        
                    case 'edit':
                        console.log('[Context Menu] Edit message:', messageId);
                        // Check if user owns the message
                        if (senderId === userId) {
                            // Dispatch edit event
                            const editEvent = new CustomEvent('message:edit', {
                                detail: { messageId, content: messageText }
                            });
                            document.dispatchEvent(editEvent);
                        } else {
                            alert('You can only edit your own messages');
                        }
                        break;
                        
                    case 'delete':
                        console.log('[Context Menu] Delete message:', messageId);
                        // Check if user owns the message
                        if (senderId === userId) {
                            // Confirm deletion
                            if (confirm('Delete this message?')) {
                                // Dispatch delete event
                                const deleteEvent = new CustomEvent('message:delete', {
                                    detail: { messageId }
                                });
                                document.dispatchEvent(deleteEvent);
                            }
                        } else {
                            alert('You can only delete your own messages');
                        }
                        break;
                }
                
                contextMenu.classList.remove('show');
            });
        });
    </script>
    
    <!-- Attachment Menu Handler -->
    <script>
        // Wait for chat screen to be active
        function initAttachmentMenu() {
            const attachmentBtn = document.getElementById('attachmentBtn');
            const attachmentMenu = document.getElementById('attachmentMenu');
            
            console.log('[Attachment] Button:', attachmentBtn);
            console.log('[Attachment] Menu:', attachmentMenu);
            
            if (attachmentBtn && attachmentMenu) {
                attachmentBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    e.preventDefault();
                    console.log('[Attachment] Button clicked');
                    
                    // Toggle menu
                    const isShowing = attachmentMenu.classList.contains('show');
                    console.log('[Attachment] Is showing:', isShowing);
                    
                    if (isShowing) {
                        // Hide menu with clean slide-out animation
                        attachmentMenu.classList.add('closing');
                        attachmentMenu.classList.remove('show');
                        attachmentBtn.classList.remove('active');
                        
                        // Remove closing class and hide after animation
                        setTimeout(() => {
                            attachmentMenu.classList.remove('closing');
                            attachmentMenu.style.display = 'none';
                        }, 250);
                    } else {
                        // Show menu - position it above the button
                        const btnRect = attachmentBtn.getBoundingClientRect();
                        attachmentMenu.style.left = btnRect.left + 'px';
                        attachmentMenu.style.bottom = (window.innerHeight - btnRect.top + 8) + 'px';
                        attachmentMenu.style.top = 'auto';
                        
                        // Remove hidden state and trigger animation
                        attachmentMenu.style.display = 'block';
                        attachmentMenu.classList.remove('closing');
                        
                        // Force reflow to ensure display change is applied before animation
                        attachmentMenu.offsetHeight;
                        
                        // Add show class to trigger animation
                        attachmentMenu.classList.add('show');
                        attachmentBtn.classList.add('active');
                        console.log('[Attachment] Menu opened');
                    }
                });
                
                // Close menu when clicking outside
                document.addEventListener('click', function(e) {
                    // Don't close if clicking the button or menu itself
                    if (attachmentBtn.contains(e.target) || attachmentMenu.contains(e.target)) {
                        return;
                    }
                    
                    if (attachmentMenu.classList.contains('show')) {
                        attachmentMenu.classList.add('closing');
                        attachmentMenu.classList.remove('show');
                        attachmentBtn.classList.remove('active');
                        
                        setTimeout(() => {
                            attachmentMenu.classList.remove('closing');
                            attachmentMenu.style.display = 'none';
                        }, 250);
                    }
                });
                
                // Close menu when clicking a menu item
                attachmentMenu.querySelectorAll('button').forEach(btn => {
                    btn.addEventListener('click', function() {
                        attachmentMenu.classList.add('closing');
                        attachmentMenu.classList.remove('show');
                        attachmentBtn.classList.remove('active');
                        
                        setTimeout(() => {
                            attachmentMenu.classList.remove('closing');
                            attachmentMenu.style.display = 'none';
                        }, 250);
                    });
                });
                
                console.log('[Attachment] Menu initialized successfully');
            } else {
                console.error('[Attachment] Elements not found!');
            }
        }
        
        // Try to initialize immediately
        document.addEventListener('DOMContentLoaded', function() {
            // Wait a bit for chat screen to become active
            setTimeout(initAttachmentMenu, 500);
        });
        
        // Also try when window loads
        window.addEventListener('load', function() {
            setTimeout(initAttachmentMenu, 100);
        });
    </script>
    
