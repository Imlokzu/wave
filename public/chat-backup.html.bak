                if (mainArea) mainArea.style.backgroundColor = background;
            }
            if (surface) {
                document.documentElement.style.setProperty('--bg-surface', surface);
                // Apply to surface elements including sidebars
                setTimeout(() => {
                    const surfaceElements = document.querySelectorAll('.bg-surface-dark, aside.desktop-sidebar, aside#roomInfoPanel');
                    surfaceElements.forEach(el => el.style.backgroundColor = surface);
                }, 100);
            }
            if (highlight) {
                document.documentElement.style.setProperty('--surface-hover', highlight);
                document.documentElement.style.setProperty('--bg-surface-lighter', highlight);
            }
        })();
    </script>
    
    <!-- Load Background Image -->
    <script>
        // Load transparency mode from localStorage
        (function() {
            const isTransparent = localStorage.getItem('transparencyMode') === 'true';
            if (isTransparent) {
                document.body.classList.add('transparency-mode');
            }
        })();
        
        (function() {
            const chatBackground = localStorage.getItem('chatBackground') || 'none';
            const bgOpacity = localStorage.getItem('bgOpacity') || '10';
            const bgBlur = localStorage.getItem('bgBlur') || '4';
            
            if (chatBackground === 'none') {
                return; // No background
            }
            
            const mainChatArea = document.querySelector('main.flex-1');
            if (!mainChatArea) return;
            
            // Create background element
            const bgElement = document.createElement('div');
            bgElement.id = 'chatBackground';
            bgElement.style.cssText = `
                position: absolute;
                inset: 0;
                z-index: 0;
                pointer-events: none;
                opacity: ${bgOpacity / 100};
                filter: blur(${bgBlur}px);
            `;
            
            // Map background types to image files
            const backgroundImages = {
                'bg1': '/backgrounds/1769528516.png',
                'bg2': '/backgrounds/1769528550.png',
                'bg3': '/backgrounds/1769528632.png',
                'bg4': '/backgrounds/1769528667.png',
                'bg5': '/backgrounds/1769528899.png',
                'bg6': '/backgrounds/1769529072.png'
            };
            
            // Apply background based on type
            if (backgroundImages[chatBackground]) {
                // Use actual background image
                bgElement.style.cssText += `
                    background-image: url('${backgroundImages[chatBackground]}');
                    background-size: cover;
                    background-position: center;
                    background-repeat: no-repeat;
                `;
            } else if (chatBackground === 'custom') {
                // Use custom uploaded image from Supabase
                const customImageUrl = localStorage.getItem('customBackgroundUrl');
                if (customImageUrl) {
                    bgElement.style.cssText += `
                        background-image: url('${customImageUrl}');
                        background-size: cover;
                        background-position: center;
                        background-repeat: no-repeat;
                    `;
                }
            }
            
            // Insert background as first child of main chat area
            mainChatArea.insertBefore(bgElement, mainChatArea.firstChild);
            
            // Ensure existing abstract background is removed or adjusted
            const existingAbstract = mainChatArea.querySelector('.absolute.inset-0.z-0');
            if (existingAbstract) {
                existingAbstract.style.display = 'none';
            }
        })();
    </script>
    
    <!-- Room Modal UI -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const modal = document.getElementById('createJoinRoomModal');
            const closeBtn = document.getElementById('closeCreateJoinModal');
            const createRoomTab = document.getElementById('createRoomTab');
            const joinRoomTab = document.getElementById('joinRoomTab');
            const createRoomContent = document.getElementById('createRoomContent');
            const joinRoomContent = document.getElementById('joinRoomContent');
            const tempRoomBtn = document.getElementById('tempRoomBtn');
            const foreverRoomBtn = document.getElementById('foreverRoomBtn');
            const createRoomBtn = document.getElementById('createRoomBtn');
            const joinRoomBtn = document.getElementById('joinRoomBtn');
            const roomCodeInput = document.getElementById('roomCodeInput');
            
            let selectedRoomType = 'temp'; // default
            
            // Close button
            closeBtn?.addEventListener('click', () => {
                modal?.classList.add('hidden');
                modal?.classList.remove('flex');
            });
            
            // Click outside to close
            modal?.addEventListener('click', (e) => {
                if (e.target === modal) {
                    modal.classList.add('hidden');
                    modal.classList.remove('flex');
                }
            });
            
            // Tab switching
            createRoomTab?.addEventListener('click', () => {
                createRoomTab.classList.add('bg-primary', 'text-white');
                createRoomTab.classList.remove('text-slate-400');
                joinRoomTab.classList.remove('bg-primary', 'text-white');
                joinRoomTab.classList.add('text-slate-400');
                createRoomContent.classList.remove('hidden');
                joinRoomContent.classList.add('hidden');
            });
            
            joinRoomTab?.addEventListener('click', () => {
                joinRoomTab.classList.add('bg-primary', 'text-white');
                joinRoomTab.classList.remove('text-slate-400');
                createRoomTab.classList.remove('bg-primary', 'text-white');
                createRoomTab.classList.add('text-slate-400');
                joinRoomContent.classList.remove('hidden');
                createRoomContent.classList.add('hidden');
            });
            
            // Room type selection
            tempRoomBtn?.addEventListener('click', () => {
                selectedRoomType = 'temp';
                tempRoomBtn.classList.add('border-primary', 'bg-primary/10', 'text-white');
                tempRoomBtn.classList.remove('border-slate-700', 'bg-surface-lighter', 'text-slate-400');
                foreverRoomBtn.classList.remove('border-primary', 'bg-primary/10', 'text-white');
                foreverRoomBtn.classList.add('border-slate-700', 'bg-surface-lighter', 'text-slate-400');
            });
            
            foreverRoomBtn?.addEventListener('click', () => {
                selectedRoomType = 'forever';
                foreverRoomBtn.classList.add('border-primary', 'bg-primary/10', 'text-white');
                foreverRoomBtn.classList.remove('border-slate-700', 'bg-surface-lighter', 'text-slate-400');
                tempRoomBtn.classList.remove('border-primary', 'bg-primary/10', 'text-white');
                tempRoomBtn.classList.add('border-slate-700', 'bg-surface-lighter', 'text-slate-400');
            });
            
            // Create room button
            createRoomBtn?.addEventListener('click', () => {
                if (window.app && window.app.handleCreateNewRoomWithOptions) {
                    window.app.handleCreateNewRoomWithOptions();
                    modal?.classList.add('hidden');
                    modal?.classList.remove('flex');
                }
            });
            
            // Join room button
            joinRoomBtn?.addEventListener('click', () => {
                const roomCode = roomCodeInput?.value.trim();
                if (roomCode && window.socketManager) {
                    const nickname = window.state?.get('user.nickname');
                    if (nickname) {
                        window.socketManager.joinRoom(roomCode, nickname);
                        modal?.classList.add('hidden');
                        modal?.classList.remove('flex');
                        roomCodeInput.value = '';
                    } else {
                        alert('Please login first');
                    }
                } else {
                    alert('Please enter a room code');
                }
            });
            
            // Store selected type for app.js to access
            window.getSelectedRoomType = () => selectedRoomType;
        });

        // Mobile Swipe Functionality
        class MobileSwipe {
            constructor() {
                this.init();
            }
            
            init() {
                if (window.innerWidth > 1023) return; // Desktop only
                
                this.chatScreen = document.getElementById('chatScreen');
                this.leftPanel = document.getElementById('mobileLeftPanel');
                this.rightPanel = document.getElementById('mobileRightPanel');
                this.overlay = document.getElementById('mobileOverlay');
                this.leftIndicator = document.getElementById('leftSwipeIndicator');
                this.rightIndicator = document.getElementById('rightSwipeIndicator');
                
                this.currentPanel = 'main';
                this.touchStartX = 0;
                this.touchStartY = 0;
                this.touchCurrentX = 0;
                this.isDragging = false;
                this.swipeThreshold = 50;
                
                this.bindEvents();
            }
            
            bindEvents() {
                // Touch events for main chat area and messages container
                const mainChat = document.querySelector('main');
                const messagesContainer = document.getElementById('messagesFeed');
                
                // Add touch events to both main chat and messages
                [mainChat, messagesContainer].forEach(element => {
                    if (element) {
                        element.addEventListener('touchstart', this.handleTouchStart.bind(this), { passive: false });
                        element.addEventListener('touchmove', this.handleTouchMove.bind(this), { passive: false });
                        element.addEventListener('touchend', this.handleTouchEnd.bind(this), { passive: false });
                    }
                });
                
                // Button events
                document.getElementById('showMobileChatsList')?.addEventListener('click', () => this.showPanel('right'));
                document.getElementById('showMobileRoomInfo')?.addEventListener('click', () => this.showPanel('left'));
                document.getElementById('closeMobileLeftPanel')?.addEventListener('click', () => this.showPanel('main'));
                document.getElementById('closeMobileRightPanel')?.addEventListener('click', () => this.showPanel('main'));
                
                // Overlay click
                this.overlay?.addEventListener('click', () => this.showPanel('main'));
                
                // Prevent panel scrolling from interfering
                this.leftPanel?.addEventListener('touchmove', (e) => e.stopPropagation());
                this.rightPanel?.addEventListener('touchmove', (e) => e.stopPropagation());
                
                // Sync with desktop messages when mobile initializes
                this.syncMobileWithDesktop();
            }
            
            handleTouchStart(e) {
                const touch = e.touches[0];
                this.touchStartX = touch.clientX;
                this.touchStartY = touch.clientY;
                this.touchCurrentX = touch.clientX;
                this.isDragging = false;
                
                // Reset any existing transforms
                this.leftPanel.style.transform = '';
                this.rightPanel.style.transform = '';
                this.overlay.style.opacity = '';
                this.overlay.style.visibility = '';
            }
            
            handleTouchMove(e) {
                const touch = e.touches[0];
                this.touchCurrentX = touch.clientX;
                
                const deltaX = this.touchCurrentX - this.touchStartX;
                const deltaY = touch.clientY - this.touchStartY;
                const absDeltaX = Math.abs(deltaX);
                const absDeltaY = Math.abs(deltaY);
                
                // Start dragging if horizontal movement is greater than vertical
                if (!this.isDragging && absDeltaX > 10 && absDeltaX > absDeltaY) {\n                    this.isDragging = true;\n                    e.preventDefault();\n                }\n                \n                if (!this.isDragging) return;\n                e.preventDefault();\n                \n                // Show indicators based on swipe direction\n                if (deltaX > 30 && this.currentPanel === 'main') {\n                    this.leftIndicator.classList.add('show');\n                    this.rightIndicator.classList.remove('show');\n                } else if (deltaX < -30 && this.currentPanel === 'main') {\n                    this.rightIndicator.classList.add('show');\n                    this.leftIndicator.classList.remove('show');\n                } else {\n                    this.leftIndicator.classList.remove('show');\n                    this.rightIndicator.classList.remove('show');\n                }\n                \n                // Apply transform for visual feedback - overlay style\n                if (this.currentPanel === 'main') {\n                    if (deltaX > 0) {\n                        // Swiping right - show left panel\n                        const progress = Math.min(deltaX / (window.innerWidth * 0.5), 1);\n                        this.leftPanel.style.transform = `translateX(${-100 + (progress * 100)}%)`;\n                        this.overlay.style.opacity = progress * 0.5;\n                        this.overlay.style.visibility = 'visible';\n                    } else {\n                        // Swiping left - show right panel\n                        const progress = Math.min(Math.abs(deltaX) / (window.innerWidth * 0.5), 1);\n                        this.rightPanel.style.transform = `translateX(${100 - (progress * 100)}%)`;\n                        this.overlay.style.opacity = progress * 0.5;\n                        this.overlay.style.visibility = 'visible';\n                    }\n                }\n            }\n            \n            handleTouchEnd(e) {\n                if (!this.isDragging) return;\n                \n                const deltaX = this.touchCurrentX - this.touchStartX;\n                const shouldSwipe = Math.abs(deltaX) > this.swipeThreshold;\n                \n                // Hide indicators\n                this.leftIndicator.classList.remove('show');\n                this.rightIndicator.classList.remove('show');\n                \n                if (shouldSwipe && this.currentPanel === 'main') {\n                    if (deltaX > 0) {\n                        this.showPanel('left');\n                    } else {\n                        this.showPanel('right');\n                    }\n                } else {\n                    this.showPanel(this.currentPanel);\n                }\n                \n                this.isDragging = false;\n            }\n            \n            showPanel(panel) {\n                this.currentPanel = panel;\n                \n                // Clear transform styles\n                this.leftPanel.style.transform = '';\n                this.rightPanel.style.transform = '';\n                this.overlay.style.opacity = '';\n                this.overlay.style.visibility = '';\n                \n                // Remove all panel classes\n                this.leftPanel.classList.remove('show');\n                this.rightPanel.classList.remove('show');\n                this.overlay.classList.remove('show');\n                \n                // Apply new panel state\n                const mobileBottomNav = document.getElementById('mobileBottomNav');\n                \n                switch (panel) {\n                    case 'left':\n                        this.leftPanel.classList.add('show');\n                        this.overlay.classList.add('show');\n                        if (mobileBottomNav) mobileBottomNav.style.transform = 'translateY(100%)';\n                        break;\n                    case 'right':\n                        this.rightPanel.classList.add('show');\n                        this.overlay.classList.add('show');\n                        if (mobileBottomNav) mobileBottomNav.style.transform = 'translateY(100%)';\n                        break;\n                    case 'main':\n                        // Default state\n                        if (mobileBottomNav) mobileBottomNav.style.transform = '';\n                        break;\n                }\n                \n                // Sync mobile chats list with desktop\n                if (panel === 'right') {\n                    this.syncChatsList();\n                }\n            }\n            \n            syncChatsList() {\n                const mobileChatsList = document.getElementById('mobileChatsList');\n                const desktopChatsList = document.getElementById('dmsListContainer');\n                \n                if (mobileChatsList && desktopChatsList) {\n                    mobileChatsList.innerHTML = desktopChatsList.innerHTML;\n                    \n                    // Add click handlers to mobile chat items\n                    mobileChatsList.querySelectorAll('.cursor-pointer').forEach(item => {\n                        item.addEventListener('click', (e) => {\n                            // Trigger the same click on desktop version\n                            const correspondingItem = desktopChatsList.querySelector(`[data-user-id=\"${item.dataset.userId}\"], [data-room-id=\"${item.dataset.roomId}\"]`);\n                            if (correspondingItem) {\n                                correspondingItem.click();\n                            }\n                            this.showPanel('main');\n                        });\n                    });\n                }\n            }\n            \n            updateRoomInfo(roomName, roomStatus, members) {\n                const mobileRoomName = document.getElementById('mobileRoomName');\n                const mobileRoomStatus = document.getElementById('mobileRoomStatus');\n                const mobileRoomMembers = document.getElementById('mobileRoomMembers');\n                \n                if (mobileRoomName) mobileRoomName.textContent = roomName;\n                if (mobileRoomStatus) mobileRoomStatus.textContent = roomStatus;\n                \n                if (mobileRoomMembers && members) {\n                    mobileRoomMembers.innerHTML = '';\n                    members.forEach(member => {\n                        const memberEl = document.createElement('div');\n                        memberEl.className = 'flex items-center gap-3 p-2 rounded-lg hover:bg-surface-hover transition-colors';\n                        memberEl.innerHTML = `\n                            <div class=\"w-8 h-8 rounded-full bg-primary/20 flex items-center justify-center\">\n                                <span class=\"material-symbols-outlined text-primary text-[16px]\">person</span>\n                            </div>\n                            <div class=\"flex-1\">\n                                <div class=\"text-sm font-medium text-white\">${member}</div>\n                                <div class=\"text-xs text-green-400\">online</div>\n                            </div>\n                            <div class=\"w-2 h-2 bg-green-400 rounded-full\"></div>\n                        `;\n                        mobileRoomMembers.appendChild(memberEl);\n                    });\n                }\n            }\n        }\n        \n        // Initialize mobile swipe on mobile devices\n        if (window.innerWidth <= 1023) {\n            window.mobileSwipe = new MobileSwipe();\n            \n            // Listen for room changes to update mobile panels\n            window.addEventListener('roomChanged', (e) => {\n                if (window.mobileSwipe) {\n                    window.mobileSwipe.updateRoomInfo(e.detail.name, e.detail.status, e.detail.members);\n                }\n            });\n        }\n        \n        // Reinitialize on resize\n        window.addEventListener('resize', () => {\n            if (window.innerWidth <= 1023 && !window.mobileSwipe) {\n                window.mobileSwipe = new MobileSwipe();\n            } else if (window.innerWidth > 1023 && window.mobileSwipe) {\n                window.mobileSwipe = null;\n            }\n        });\n    </script>
</body>
