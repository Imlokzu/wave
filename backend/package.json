{
  "name": "wave-messenger",
  "version": "2.0.0",
  "description": "WAVE - Modern communication platform with real-time chat, polls, and ephemeral messaging",
  "main": "dist/server.js",
  "scripts": {
    "build": "node ./node_modules/typescript/bin/tsc",
    "start": "node dist/server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:bot\"",
    "dev:server": "ts-node src/server.ts",
    "dev:bot": "cd feed-bot && .venv\\Scripts\\python.exe -m uvicorn api:app --reload --host 0.0.0.0 --port 3000",
    "dev:admin": "ts-node src/admin-server.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "messenger",
    "chat",
    "websocket",
    "voice-calls",
    "video-calls",
    "music-streaming",
    "social-platform"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clerk/express": "^1.0.0",
    "@supabase/supabase-js": "^2.39.0",
    "agora-rtc-sdk-ng": "^4.21.0",
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.3",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "music-metadata": "^8.1.4",
    "nodemailer": "^6.10.1",
    "openai": "^4.24.1",
    "socket.io": "^4.6.1",
    "svix": "^1.15.0",
    "uuid": "^9.0.1",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.22",
    "@types/socket.io-client": "^1.4.36",
    "@types/uuid": "^9.0.7",
    "concurrently": "^9.2.1",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.3",
    "socket.io-client": "^4.8.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
